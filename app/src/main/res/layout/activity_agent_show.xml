<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page"
    android:id="@+id/main">

    <RelativeLayout
        android:id="@+id/rlBottomTabTopbar"
        style="@style/topbar_bg" >

        <ImageButton style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="代理人设定" />
    </RelativeLayout>

    <View style="@style/divider_horizontal_1px" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/activity_page"
        android:padding="4dp"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/ll_horizontal_match_wrap"
            android:padding="4dp" >

            <LinearLayout
                style="@style/ll_vertical_match_wrap"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:paddingLeft="4dp" >

                <TextView
                    style="@style/content_item_lf_tv"
                    android:id="@+id/tvname"
                    android:textSize="25sp"
                    android:text="叶明"
                    android:textStyle="bold"/>

                <TextView
                    style="@style/content_item_lf_tv"
                    android:textSize="20sp"
                    android:id="@+id/tvgroupname"
                    android:text="中道益通" />



                <TextView
                    style="@style/content_item_lf_tv"
                    android:id="@+id/tvdate"
                    android:textSize="20sp"
                    android:text="代理时间：2020-02-02" />


                <TextView
                    style="@style/content_item_lf_tv"
                    android:id="@+id/tvcreattime"
                    android:textSize="20sp"
                    android:text="创建时间：2020-02-02" />

                <TextView
                    style="@style/content_item_lf_tv"
                    android:id="@+id/tvusetime"
                    android:textSize="20sp"
                    android:text="应用时间：2020-02-02" />


            </LinearLayout>



            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/ivUserViewHead"
                    style="@style/img_fitXY"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/blue"
                    android:src="@drawable/oval_alpha" />

                <TextView   android:id="@+id/lbUserViewHead"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text = "代理中"
                    android:textColor="@color/white"
                    />
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnstop"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/button_circle_shape"
            android:text="终止"
            android:textColor="@color/white"
            android:textSize="17sp" />


    </LinearLayout>

</LinearLayout>